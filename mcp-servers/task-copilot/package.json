{
  "name": "@copilot/task-mcp-server",
  "version": "1.8.0",
  "description": "MCP server for PRD and task management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "test": "npm run build && node dist/tools/full-integration.test.js",
    "test:integration": "npm run build && node dist/tools/iteration.integration.test.js",
    "test:full": "npm run build && node dist/tools/full-integration.test.js",
    "test:progress": "npm run build && node dist/tools/progress-visibility.integration.test.js",
    "test:pause-resume": "npm run build && node dist/tools/__tests__/checkpoint-pause-resume.test.js",
    "test:activation-mode": "npm run build && node dist/verify-activation-mode.js",
    "test:verification": "npm run build && node dist/tools/__tests__/verification-complex-tasks.test.js",
    "test:prd-auto": "npm run build && node dist/tools/__tests__/prd-auto-detection.test.js",
    "test:benchmark": "npm run build && node dist/benchmark/test.js",
    "benchmark:example": "npm run build && node dist/benchmark/example.js",
    "benchmark:baseline": "npm run build && node dist/benchmark/baseline-scenarios.js",
    "benchmark:framework": "npm run build && node dist/benchmark/framework-scenarios.js",
    "benchmark:compare": "npm run build && node dist/benchmark/compare-scenarios.js",
    "benchmark:cli": "npm run build && node dist/benchmark/cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "ajv": "^8.12.0",
    "better-sqlite3": "^12.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^25.0.3",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Everyone Needs a Copilot",
  "license": "MIT"
}
